<% include ../../base/_header.ejs %>
<% include ../../base/_navbar.ejs %>
<% include ../../base/_aside.ejs %>
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2 style="font-size: 30px">
                Edit Item
            </h2>
        </div>

        <!--<div class="container">-->
        <form action="/admin/assets/<%= assets._id %>" id="form_validation" method="post">
            <div class="row">
                <div class="col-sm-6 ">
                    <label>Brand</label>
                    <div class="form-select">
                        <select class="selectpicker" id="select" name="brand" required>
                            <% brands.forEach(function(brand) { %>
                            <option value="<%= brand.brand %>"> <%= brand.brand %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>
                <div class="col-sm-6 ">
                    <label>Type</label>
                    <div class="form-select">
                        <select class="selectpicker" id="select" name="type" required>
                            <%for(var i = 0; i < brands.length; i++){%>
                            <%for(var j = 0; j < brands[i].type.length; j++ ){%>
                            <option value="<%= brands[i].type[j] %>"> <%= brands[i].type[j] %></option>
                            <% }} %>
                        </select>
                    </div>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-line">
                        <label>Model</label>
                        <input style="background-color: transparent" type="text" class="form-control"
                               name="model" value="<%= assets.model %>" required>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-line">
                        <label>Serial Number</label>
                        <input style="background-color: transparent" type="text" class="form-control"
                               name="serial_number" value="<%= assets.serial_number %>" required>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group" >
                        <label>State</label>
                        <select class="selectpicker" name="state" required>
                            <option value="Good">Good</option>
                            <option value="Regular">Regular</option>
                            <option value="Damaged">Damaged</option>
                            <option value="Out Of Service">Out Of Service</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <label>Price</label>
                            <input style="background-color: transparent" type="number" class="form-control"
                                   name="price" value="<%= assets.price %>" required>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <label>Description</label>
                            <textarea type="number" value="<%= assets.description %>" class="form-control" name="description" required></textarea>
                        </div>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-sm-5 text-center">
                    <a class="btn btn-info" href="/admin/assets">Back</a>
                </div>
                <div class="col-sm-6 text-center">
                    <input type="hidden" value="PUT" name="_method">
                    <button type="submit" class="btn btn-info ">Update</button>
                </div>
            </div>
        </form>
        <!--</div>-->
    </div>
</section>

<% include ../../base/_footer.ejs %>

