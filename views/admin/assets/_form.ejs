<script>
    $(document).ready(function() {
        var max_fields      = 10;
        var wrapper         = $(".input_fields_wrap");
        var add_button      = $(".add_field_button");

        var x = 1;
        $(add_button).click(function(e){
            e.preventDefault();
            if(x < max_fields){
                x++;
                $(wrapper).append('<div class="text-center input_fields_wrap form-line"><a href="#" class="remove_field"><i class="material-icons">close</i> </a><input type="text" class="form-control" name="type" required/><label class="form-label">Type</label></div>');
            }
        });

        $(wrapper).on("click",".remove_field", function(e){
            e.preventDefault(); $(this).parent('div').remove(); x--;
        })
    });

    function validateEmpty() {
        document.getElementById("estimated_hours").defaultValue = "00";
        document.getElementById("challenging_bugs").defaultValue = "00";
        document.getElementById("trello_board_id").defaultValue = "--";
    }
</script>
