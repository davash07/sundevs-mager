<div id="ModalHardware" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title text-center">Create Hardware</h2>
            </div>
            <div class="modal-body">
                <form id="form_validation" action="/admin/assets" method="POST">
                    <div class="row">
                        <div class="col-sm-6 ">
                            <label>Brand</label>
                            <div class="form-select">
                                <select class="selectpicker" id="select" name="brand" required>
                                    <% brands.forEach(function(brand) { %>
                                    <option value="<%= brand.brand %>"> <%= brand.brand %></option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6 ">
                            <label>Type</label>
                            <div class="form-select">
                                <select class="selectpicker" id="select" name="type" required>
                                    <%for(var i = 0; i < brands.length; i++){%>
                                    <%for(var j = 0; j < brands[i].type.length; j++ ){%>
                                    <option value="<%= brands[i].type[j] %>"> <%= brands[i].type[j] %></option>
                                    <% }} %>
                                </select>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" name="model" required>
                                    <label class="form-label">Model</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" name="serial_number" required>
                                    <label class="form-label">Serial Number</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group" >
                                <label>State</label>
                                <select class="selectpicker" name="state" required>
                                    <option value="Good">Good</option>
                                    <option value="Regular">Regular</option>
                                    <option value="Damaged">Damaged</option>
                                    <option value="Out Of Service">Out Of Service</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="number" class="form-control" name="price" required>
                                    <label class="form-label">Price</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <textarea type="number" class="form-control" name="description" required></textarea>
                                    <label class="form-label">Description</label>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <center>
                            <button class="btn btn-primary waves-effect" type="submit">Save</button>
                        </center>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
