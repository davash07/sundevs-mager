<div class="col-sm-9">
    <div class="row">
        <form action="/time_record" style="margin-top: 6%" method="post">
            <h2 class="modal-title text-center">Register Time</h2>
            <br>
            <div class="row">
                <div  class=" text-center form-group col-sm-4 ">
                    <h4>Project</h4>
                    <h4><%= project.name%></h4>
                    <input hidden value="<%= project._id%>" name="project_id">
                </div>
                <div id="resto-form" class="text-center form-group col-sm-4 ">
                    <h4>Phase</h4>
                    <select class="selectpicker" id="activities" name="activity">
                        <option value="">--------</option>
                        <% if (project.activities === null) { %>
                        <option value="">--------</option>
                        <% } else { %>
                        <% for(var i = 0; i < project.activities.length; i++) { %>
                        <option value="<%= project.activities[i] %>"><%= project.activities[i] %></option>
                        <% } %>
                        <% } %>
                        </select>
                </div>
                <div class="form-group text-center col-sm-4">
                    <label>Date</label>
                    <input type="date" class="form-control" name="date">
                </div>
            </div>

            <hr>
            <h4 class="text-center">Time Worked</h4>
            <div class="row">
                <div class="form-group text-center col-sm-6">
                    <label>Hours</label>
                    <input type="number" class="text-center form-control" name="hours">
                </div>
                <div class="form-group text-center col-sm-6">
                    <label>Minutes</label>
                    <input type="number" class="text-center form-control" name="minutes">
                </div>
            </div>
            <hr>
            <h4 class="text-center">Notes</h4>
            <div class="row">
                <div class="form-group text-center col-sm-12">
                    <input type="text" class="form-control" name="comment">
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 text-center">
                    <button type="submit" class="btn btn-info ">Save</button>
                </div>
                <div class="col-sm-6 text-center">
                    <% if(currentUser.rol === 'admin'){ %>
                    <a href="/admin/projects" class="btn btn-info">Back</a>
                    <% } else{ %>
                    <a href="/projects" class="btn btn-info">Back</a>
                    <% } %>
                </div>
            </div>
        </form>
    </div>

</div>

