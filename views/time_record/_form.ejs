<script>
    function validateEmpty() {
        document.getElementById("minutes").defaultValue = "00";
        document.getElementById("comment").defaultValue = "--";
    }
</script>
<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title text-center">Register Time On <%= project.name%></h3>

            </div>
            <div class="modal-body">
                <form action="/time_record"  method="post">
                    <h4 class="text-center">Time Record</h4>

                    <div class="row">
                        <div hidden class=" text-center form-group col-sm-12 ">
                            <input hidden value="<%= project._id%>" name="project_id">
                        </div>
                        <div id="resto-form" class="text-center form-group col-sm-6 ">
                            <h4>Phase</h4>
                            <select class="selectpicker" id="activities" name="activity">
                                <option value="">--------</option>
                                <% if (project.activities === null) { %>
                                <option value="">--------</option>
                                <% } else { %>
                                <% for(var i = 0; i < project.activities.length; i++) { %>
                                <option value="<%= project.activities[i] %>"><%= project.activities[i] %></option>
                                <% } %>
                                <% } %>
                            </select>
                        </div>
                        <div class="form-group text-center col-sm-6">
                            <h4>Date</h4>
                            <input type="date" class="form-control" name="date">
                        </div>
                    </div>

                    <hr>
                    <h4 class="text-center">Time Worked</h4>
                    <div class="row">
                        <div class="form-group text-center col-sm-6">
                            <label>Hours</label>
                            <input type="number" min="0" class="text-center form-control" name="hours" required>
                        </div>
                        <div class="form-group text-center col-sm-6">
                            <label>Minutes</label>
                            <input type="number" min="0" max="60" id="minutes" class="text-center form-control" name="minutes">
                        </div>
                    </div>
                    <hr>
                    <h4 class="text-center">Notes</h4>
                    <div class="row">
                        <div class="form-group text-center col-sm-12">
                            <input type="text" class="form-control" id="comment" name="comment">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="col-sm-6 text-center">
                            <button type="submit" class="btn btn-info" onclick="validateEmpty()">Save</button>
                        </div>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>

        </div>

    </div>
</div>


